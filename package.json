{
  "name": "storefront-components",
  "version": "0.0.1",
  "description": "Framework agnostic components for a headless ecommerce site",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write *",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amclin/storefront-components.git"
  },
  "keywords": [
    "ecommerce",
    "components",
    "products",
    "storefront",
    "headless"
  ],
  "author": "Anthony McLin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amclin/storefront-components/issues"
  },
  "homepage": "https://github.com/amclin/storefront-components#readme",
  "devDependencies": {
    "@commitlint/config-angular": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/github": "^5.5.8",
    "@semantic-release/npm": "^5.3.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "commitlint": "^8.3.5",
    "husky": "^4.2.3",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^2.0.2",
    "semantic-release": "^15.14.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm test && pretty-quick --staged",
      "pre-push": "npm test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "docs",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ]
  }
}
